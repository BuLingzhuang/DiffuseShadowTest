<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<com.intsig.scanner.diffuseshadowtest.TestView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <com.intsig.scanner.diffuseshadowtest.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:sl_cornerRadius="56dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="@color/shadow_blue"
        app:sl_shadowRadius="30dp">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/fab_selector"
            android:src="@drawable/ic_add_white"
            tools:ignore="ContentDescription" />

    </com.intsig.scanner.diffuseshadowtest.ShadowLayout>

    <com.intsig.scanner.diffuseshadowtest.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:sl_cornerRadius="56dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="@color/shadow"
        app:sl_shadowRadius="4dp">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/fab_selector"
            android:src="@drawable/ic_add_white"
            tools:ignore="ContentDescription" />

    </com.intsig.scanner.diffuseshadowtest.ShadowLayout>

    <com.intsig.scanner.diffuseshadowtest.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:sl_cornerRadius="2dp"
        app:sl_shadowColor="@color/shadow">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/raised_selector"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="88dp"
            android:text="@string/Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white" />

    </com.intsig.scanner.diffuseshadowtest.ShadowLayout>

    <com.intsig.scanner.diffuseshadowtest.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:sl_cornerRadius="2dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="@color/shadow">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/raised_selector"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="88dp"
            android:text="@string/Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white" />

    </com.intsig.scanner.diffuseshadowtest.ShadowLayout>

    <com.intsig.scanner.diffuseshadowtest.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:sl_cornerRadius="16dp"
        app:sl_dx="0dp"
        app:sl_dy="4dp"
        app:sl_shadowColor="@color/cs_green"
        app:sl_shadowRadius="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/raised_normal_test"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Diffuse Shadow"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </com.intsig.scanner.diffuseshadowtest.ShadowLayout>

</LinearLayout>